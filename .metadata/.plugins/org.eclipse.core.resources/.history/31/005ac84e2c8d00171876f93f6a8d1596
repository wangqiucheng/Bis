			<script type="text/javascript">
			//上下报告的时候，判断第一个ID和最后一个ID的报告，让按键失效
			window.onload=function(){
				
				var isFinished = ${report.report_status};
				if(isFinished==0){
					alert("您的报告正在生成中，暂时无法查看");
				}
			
				//上一个下一个的js代码
				var firstId=${firstId};
				var lastId=${lastId};
				var id = ${report.id};
				if(firstId==null||id==firstId){
					document.getElementById("pre").setAttribute("href","#");
					document.getElementById("pre").onclick=function(){
						alert("已经是该类型第一个报告！");
					}
				}if(lastId==null||id==lastId){
					document.getElementById("next").setAttribute("href","#");
					document.getElementById("next").onclick=function(){
						alert("已经是该类型最后第一个报告！");
					}
				}
			};
