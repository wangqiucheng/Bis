package com.bisa.hkshop.wqc.web.dto;

import java.util.ArrayList;
import java.util.List;

import com.bisa.hkshop.model.Commodity;

public class CommodityDto {
	private Commodity commodity;
	private int commodityCount;
	private float pricre;
	private float countp;
	
	
	
	public Commodity getCommodity() {
		return commodity;
	}



	public void setCommodity(Commodity commodity) {
		this.commodity = commodity;
	}



	public int getCommodityCount() {
		return commodityCount;
	}



	public void setCommodityCount(int commodityCount) {
		this.commodityCount = commodityCount;
	}



	public float getPricre() {
		return pricre;
	}



	public void setPricre(float pricre) {
		this.pricre = pricre;
	}



	public float getCountp() {
		return countp;
	}



	public void setCountp(float countp) {
		this.countp = countp;
	}



	public static  List<CommodityDto> toCon(List<Commodity> list) {
		
		List<CommodityDto> listDto=new ArrayList<CommodityDto>();

		Commodity b=null;
		
		for(Commodity c : list) {
			if(b==null) {
				CommodityDto ddto=new CommodityDto();
				ddto.setCommodity(c);
				ddto.setPricre(c.getSelling_price());
				ddto.setCountp(1);
				ddto.setCommodityCount(1);
				b=c;
				continue;
			}
			
		
		}
		
	}
}
