package com.bisa.hkshop.wqc.basic.utility;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.cache.annotation.Cacheable;

import com.bisa.hkshop.model.Banner;
import com.bisa.hkshop.wqc.service.IBannerService;


public class bannerUtil {
	


	@Autowired
	private static IBannerService IBannerService;
	
	@Cacheable(value="spring_cache",key="#banner")
	public  static List<Banner> getIb(int bannerindex) {
		if(bannerindex==1) {
			List<Banner> banner=IBannerService.getBanner();
			return banner;
		}else {
			return null;
		}
	
	}
}
